<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.softdesign.devintensive.ui.activities.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="@dimen/spacing_small_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/gray"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:weightSum="1"
                            android:layout_weight="0.25">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="5"
                                android:id="@+id/textView2"
                                android:gravity="center"
                                android:layout_weight="0.27"
                                android:textStyle="normal|bold"
                                android:textSize="36dp"
                                android:textColor="#ffffff"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Рейтинг"
                                android:id="@+id/textView"
                                android:gravity="center"
                                android:textSize="12dp"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="72dp"
                            android:background="@color/gray_light"
                            android:layout_gravity="center"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:weightSum="1"
                            android:layout_weight="0.41">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="5"
                                android:id="@+id/textView3"
                                android:gravity="center"
                                android:layout_weight="0.27"
                                android:textStyle="normal|bold"
                                android:textSize="36dp"
                                android:textColor="#ffffff"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Написано строк кода"
                                android:id="@+id/textView4"
                                android:gravity="center"
                                android:textSize="12dp"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="72dp"
                            android:background="@color/gray_light"
                            android:layout_gravity="center"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:weightSum="1"
                            android:layout_weight="0.25">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="5"
                                android:id="@+id/textView5"
                                android:gravity="center"
                                android:layout_weight="0.27"
                                android:textStyle="normal|bold"
                                android:textSize="36dp"
                                android:textColor="#ffffff"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Проектов"
                                android:id="@+id/textView6"
                                android:gravity="center"
                                android:textSize="12dp"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">


                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_call_black_24dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint = "Мобильный телефон"
                            android:inputType="phone"
                            android:text="+7(966) 896-46-79"
                            android:enabled="false"
                            android:textColor="@color/Black"
                            android:textColorHint="@color/gray"
                            android:focusable="false"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_phone_in_talk_black_24dp"
                    >

                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/gray_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">


                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_email_black_24dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:gravity="bottom">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint = "Мобильный телефон"
                            android:inputType="textEmailAddress"
                            android:text="zbrx@mail.ru"
                            android:enabled="false"
                            android:textColor="@color/Black"
                            android:textColorHint="@color/gray"
                            android:focusable="false"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_send_black_24dp"
                    >

                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/gray_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:layout_marginBottom="@dimen/spacing_small_8">


            <ImageView
                style="@style/icon.left"
                android:src="@drawable/vk"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:layout_marginRight="@dimen/spacing_normal_16"
                android:gravity="bottom">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint = "Профиль в vk.com"
                        android:inputType="textEmailAddress"
                        android:text="vk.com/aslan_zubairaev"
                        android:enabled="false"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/gray"
                        android:focusable="false"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_remove_red_eye_black_24dp"
                >

            </ImageView>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/gray_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">


                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/git"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:gravity="bottom">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint = "Репозиторий"
                            android:inputType="textEmailAddress"
                            android:text="github.com/Sindrom132"
                            android:enabled="false"
                            android:textColor="@color/Black"
                            android:textColorHint="@color/gray"
                            android:focusable="false"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_remove_red_eye_black_24dp"
                    >

                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/gray_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:layout_weight="0.49">


                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_person_black_24dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="top"
                    android:foregroundGravity="top"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:gravity="bottom">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:hint = "О Себе"
                            android:text="Самый счастливый! Самый счастливый! Самый счастливый! Самый счастливый! Самый счастливый! Самый счастливый! Самый счастливый! Самый счастливый! Самый счастливый! Самый счастливый! Самый счастливый!"
                            android:enabled="false"
                            android:textColor="@color/gray"
                            android:textColorHint="@color/gray"
                            android:focusable="false"
                            android:autoText="false"
                            android:clickable="false"
                            android:elegantTextHeight="true"
                            android:hyphenationFrequency="none"
                            android:lines="@integer/abc_config_activityDefaultDur"
                            android:longClickable="false"
                            android:selectAllOnFocus="false"
                            android:singleLine="false"
                            android:ellipsize="start"
                            android:inputType="textMultiLine"
                            android:textSize="15dp"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"
                    >

                </ImageView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
